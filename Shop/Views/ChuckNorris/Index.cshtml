@model Shop.Models.ChuckNorris.ChuckNorrisViewModel

@{
    ViewData["Title"] = "Chuck Norris Joke Generator";
}

<div class="container mt-5 text-center">
    <h1>Chuck Norris Joke Generator</h1>

    <div class="mt-4">
        <form asp-controller="ChuckNorris" asp-action="Index" method="get">
            <button type="submit" class="btn btn-primary">Get Random Joke</button>
        </form>
    </div>

    <div class="mt-4">
        @if (!string.IsNullOrEmpty(Model?.JokeText))
        {
            <p>@Model.JokeText</p>
        }
        else
        {
            <p class="text-muted">Click the button to get a Chuck Norris joke.</p>
        }
    </div>
</div>