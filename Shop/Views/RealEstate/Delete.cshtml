@model Shop.Models.RealEstate.RealEstateDeleteViewModel

<h1>Delete</h1>

<div>
	<h4>Real Estate</h4>
	<hr> </hr>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Id" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Id)
		</div>
	</dl>

	<div class="form-group row">
		<label asp-for="Area" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Area" class="form-control" />
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Location" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Location" class="form-control" />
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="RoomNumber" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="RoomNumber" class="form-control" />
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="BuildingType" class="form-control" />
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="CreatedAt" class="form-control" />
		</div>
	</div>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.ModifiedAt)
		</div>
	</dl>
	<hr></hr>
	<form asp-action="DeleteConfirmation">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
	</form>
	<a asp-action="Index" asp-controller="RealEstate" class="btn btn-success">Back</a>

</div>