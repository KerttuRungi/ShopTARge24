@model Shop.Models.Accounts.ForgotPasswordViewModel

<div class="row">
	<div class="col-md-12">
		<h2 class="fw-bold mb-3">Reset Password</h2>
		<p class="text-muted small mb-4">Enter your account email to reset password</p>
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group mb-3">
				<label class="form-label fw-500" asp-for="Email"></label>
				<input asp-for="Email" class="form-control form-control-lg" />

				<button type="submit" class="btn btn-primary shadow-sm gap-1 mt-4">
					Send reset link
				</button>
			</div>
		</form>
	</div>
</div>