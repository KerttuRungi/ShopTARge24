@model Shop.Models.Kindergarten.KindergartenDetailsViewModel

<h1>Details</h1>

<div>
    <h4>Kindergarten</h4>
    <hr />
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Id" class="col-sm-2 col-form-label"></label>
			<span class="col-sm-10">@Html.DisplayFor(model => model.Id)</span>
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
			<span id="TestIdKindergartenGroupNameDetails" class="col-sm-10"> @Html.DisplayFor(model => model.GroupName) </span>
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="ChidlrenCount" class="col-sm-2 col-form-label"></label>
			<span id="TestIdKindergartenChildrenCountDetails" class="col-sm-10"> @Html.DisplayFor(model => model.ChidlrenCount) </span>
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
			<span id="TestIdKindergartenKindergartenNameDetails" class="col-sm-10"> @Html.DisplayFor(model => model.KindergartenName) </span>
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="TeacherName" class="col-sm-2 col-form-label"></label>
			<span id="TestIdKindergartenTeacherNameDetails" class="col-sm-10"> @Html.DisplayFor(model => model.TeacherName) </span>
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
			<span class="col-sm-10"> @Html.DisplayFor(model => model.CreatedAt) </span>
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="UpdatedAt" class="col-sm-2 col-form-label"></label>
			<span class="col-sm-10">@Html.DisplayFor(model => model.UpdatedAt)</span>
		</div>
	</dl>

	@foreach (var images in Model.Image)
	{
		<partial name="_Images" model="images " />
	}

    <hr />
    <a asp-action="Index" asp-controller="kindergarten" class="btn btn-danger">Back</a>
</div>