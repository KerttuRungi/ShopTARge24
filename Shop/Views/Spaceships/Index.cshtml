@model IEnumerable<Shop.Models.Spaceships.SpaceshipIndexViewModel>

@{
	int rowNumber = 1;
}

<div>
	<a asp-action="create" asp-controller="Spaceships" type="submit" class="btn btn-primary" id="TestIdCreate">Create</a>
</div>

<div class="h1">
	Spaceships
</div>
<form method="post">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">Nr</th>
				<th scope="col">Name</th>
				<th scope="col">Type</th>
				<th scope="col">Build Date</th>
				<th scope="col">Crew</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var spaceship in Model)
			{
				<tr>
					<td id="TestIdRowNr">@rowNumber</td>
					<td id="TestIdSpaceshipName">@spaceship.Name</td>
					<td id="TestIdSpaceshipClassification">@spaceship.Classification</td>
					<td id="TestIdSpaceshipBuildDate">@spaceship.BuildDate</td>
					<td id="TestIdSpaceshipCrew">@spaceship.Crew</td>

					<td>
						<a asp-action="update" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-outline-primary" id="TestIdUpdate">Update</a>
						<a asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-outline-danger" id="TestIdDelete">Delete</a>
						<a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-primary" id="TestIdDetails">Details</a>
					</td>


				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>