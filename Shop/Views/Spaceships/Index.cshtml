@model IEnumerable<Shop.Models.Spaceships.SpaceshipIndexViewModel>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold m-0">Spaceships</h1>
    <a asp-action="create" asp-controller="Spaceships" class="btn btn-primary rounded-pill px-4 shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Create
    </a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var ship in Model) 
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden">

                <div class="card-img-top-container bg-light" style="height: 200px; overflow: hidden;">
                    @if (ship.Images != null && ship.Images.Any())
                    {
                        <partial name="_Images" model="ship.Images.FirstOrDefault()" />
                    }
                    else
                    {
                        <div class="h-100 d-flex align-items-center justify-content-center text-muted">
                            <i class="bi bi-image" style="font-size: 2rem;"></i>
                        </div>
                    }
                </div>

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <h5 class="card-title fw-bold">@ship.Name</h5>
                        <span class="badge bg-primary-subtle text-primary rounded-pill">@ship.Classification</span>
                    </div>

                    <div class="mt-3 small text-muted">
                        <p class="mb-1"><i class="bi bi-calendar3 me-2"></i>@ship.BuildDate?.ToShortDateString()</p>
                        <p class="mb-0"><i class="bi bi-people me-2"></i>Crew: @ship.Crew</p>
                    </div>
                </div>

                <div class="card-footer bg-white border-0 p-3">
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@ship.Id" class="btn btn-light btn-sm flex-grow-1 rounded-3">Details</a>
                        <a asp-action="Update" asp-route-id="@ship.Id" class="btn btn-outline-secondary btn-sm rounded-3">Edit</a>
                        <a asp-action="Delete" asp-route-id="@ship.Id" class="btn btn-outline-danger btn-sm rounded-3">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
