@model Shop.Models.Spaceships.SpaceshipDetailsViewModel

<h1>Details</h1>

<div>
    <h4>Spaceships</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <span class="col-sm-10"> @Html.DisplayFor(model => model.Id) </span>
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <span id="TestIdNameDetails" class="col-sm-10"> @Html.DisplayFor(model => model.Name)</span>
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Classification" class="col-sm-2 col-form-label"></label>
            <span id="TestIdClassificationDetails" class="col-sm-10"> @Html.DisplayFor(model => model.Classification) </span>
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="BuildDate" class="col-sm-2 col-form-label"></label>
            <span id="TestIdBuildDateDetails" class="col-sm-10"> @Html.DisplayFor(model => model.BuildDate) </span>
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Crew" class="col-sm-2 col-form-label"></label>
            <span id="TestIdCrewDetails" class="col-sm-10"> @Html.DisplayFor(model => model.Crew) </span>
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
            <span id="TestIdEnginePowerDetails" class="col-sm-10"> @Html.DisplayFor(model => model.EnginePower) </span>
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label" id="TestIdCreatedAtDetails"></label>
            <span class="col-sm-10"> @Html.DisplayFor(model => model.CreatedAt) </span>
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label" id="TestIdModifiedAtDetails"></label>
            <span class="col-sm-10"> @Html.DisplayFor(model => model.ModifiedAt) </span>
        </div>
    </dl>

    @foreach (var images in Model.Images)
    {
        <partial name="_Images" model="images" />
    }

    <hr />
    <a asp-action="Index" asp-controller="spaceships" class="btn btn-danger" id="TestIdBackDetails">Back</a>
</div>
